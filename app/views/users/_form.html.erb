<div class="center create-user">
  <%= form_for @user do |f| %>
    <div class="form-group row "col-sm-10"">
      <%= f.label :email,  class:"col-sm-offset-3 col-sm-3 col-form-label"%>
      <%= f.text_field :email, class:"col-sm-3" %>
    </div>
    <div class="form-group row">
    <%= f.label :password,  class:"col-sm-offset-3 col-sm-3 col-form-label" %>
    <%= f.password_field :password, class:"col-sm-3" %>
    </div>
    <div class="form-group row">
    <%= f.label :password_confirmation,  class:"col-sm-offset-3 col-sm-3 col-form-label" %>
    <%= f.password_field :password_confirmation, class:"col-sm-3" %>
    </div>
    <div class="center">
      <%= f.submit 'Create User', class:"btn btn-success"%>
    </div>
  <% end %>
</div>