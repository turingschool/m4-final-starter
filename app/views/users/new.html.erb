<h2>Create a new Account</h2>
<%= form_for @user do |f| %>
<br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
<br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
<br><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
<br><br>
  <%= f.submit "Register", class: "new-account" %>

<% end %>