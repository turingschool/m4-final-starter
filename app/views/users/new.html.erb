<center>
  <h1>SignUp !</h1>
</center>


<div class="container" style="margin-top:50px;margin-bottom:100px;">
  <div class="container-fluid well well-lg">
    <%= form_for(@user) do |f| %>

    <div class="form-group row">
      <%= f.label :email, class: "col-xs-2 col-form-label"  %>
      <div class="col-xs-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %><br>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-xs-2 col-form-label"  %>
      <div class="col-xs-10">
        <%= f.password_field :password, class: "form-control" %><br>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: "col-xs-2 col-form-label"  %>
      <div class="col-xs-10">
        <%= f.password_field :password_confirmation, class: "form-control" %><br>
      </div>
    </div>


    <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
    <h3>Already an user? <%= link_to "Log in by clicking here", login_path %> </h3>
  </div>
</div>
