<h1>Create a new account</h1>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>

  <%= f.label :password %>
  <%= f.password_field :password %><br/>

  <%= f.label :confirm_password %>
  <%= f.password_field :password_confirmation %><br/>

  <%= f.submit "Create Account" %>
<% end %>