<div class='col-md-4'>
  <div class='<%=link.js_class%>' data-id="<%=link.id%>" id="link-<%=link.id%>">
    <div class="container">
      <table>
      <tr>

      <td class='link-title'><%= link.title %></td>
        <td>
          <%= 'TOP' if link.url == hot.first %>
          <%= 'HOT' if hot.include? link.url %>
        </td>
      </tr>
      <tr>
        <td class='link-url'><%= link.url %></td>
      </tr>
      <tr>
        <td class="link-read">
          <%= link.read %>
        </td>
      </tr>
    </table>
      <p class="link_buttons">
        <% if link.read? %>
          <%= button_tag 'Mark as Unread', class: 'mark-unread' %>
        <% else %>
          <%= button_tag 'Mark as Read', class: 'mark-read' %>
        <% end %>
        <button class='edit-link'><%= link_to 'Edit', edit_link_path(link) %></button>
        <button class='delete-link'>Delete</button>
      </p>
    </div>
  </div>
</div>
