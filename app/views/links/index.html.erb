<div id='filters' class='row'>
  <span>Filter by: </span>
  <%= button_tag 'Read', class: 'filter', id: 'read' %>
  <%= button_tag 'Unread', class: 'filter', id: 'unread' %>
  <%= text_field_tag 'search', '', id: 'search_text'  %>
  <%= button_tag 'Search', class: 'search'%>
</div>
<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>


<div id="links-list" class='row'>
  <% @links.each do |link| %>
    <%= render partial: 'link', locals: {link: link, hot: @hot_links} %>
  <% end %>
</div>

<h2>Hot Reads!</h2>
<ol id="hot-reads" class='row'>
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read %>"><%= read %></a>
  </li>
<% end %>
</ol>
