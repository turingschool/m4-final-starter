<p class="errors">

<h1>Welcome to links index, <%= current_user.email %>!</h1>

<div class="link_form">
  <%= form_for @link do |f| %>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.submit "Add Link", class: "add-link" %>
  <% end %>
</div>

<br>

<div class="links">

<% @links.each do |link| %>
  <div class="link">
    <ul>
    <li>URL: <%= link_to link.url, link.url %></li>
    <li>Title: <%= link.title %></li>
    <li>Read?: <%= link.read %></li>
    <%= button_to "Edit", edit_link_path(link), method: :get %>
  </ul>
  </div>
<% end %>

</div>
