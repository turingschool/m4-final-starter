<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
   <% flash.each do |type, message| %>
    <div class="alert alert-<%= type %>">
    <%= sanitize(message) %>
    </div>
  <% end %>
    </div>
  <%= yield %>

    <br>
    <% if current_user %>
      <%= link_to "Sign Out", logout_path, method: :delete %>
    <% end %>

</div>

</body>
</html>
