<!DOCTYPE html>
<html>
  <head>
    <title>URLockBox</title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
    </head>
  <body>
    <div class="container">
        <% if current_user %>
        <div class="navbar">
        <p> <%= link_to "Logout", logout_path, method: :delete  %> </p>
      </div>
        <% end %>

    <div class="container-fluid">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %> text-center alert-dismissible" role="alert">
            <%= sanitize(message) %>
        </div>
        <% end %>
    </div>

    </div>
      <%= yield %>
    </div>
  </body>
</html>
