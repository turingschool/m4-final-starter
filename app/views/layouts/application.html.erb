<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container flash">
    <% flash.each do |type, message| %>
    <%= content_tag :div, sanitize(message), class: type %>
    <% end %>
  </div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
