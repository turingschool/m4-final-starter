<div class="login">
  <h3>Log in</h3>
 <%= form_tag('/login', action: 'create') do %>
  <%= label_tag(:email, 'Email') %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password, placeholder: 'Password' %>
  <%= submit_tag 'Login' %>
<% end %>
<p> Don't have an account? <%= button_to "Sign up", signup_path, method: :get %> </p>
</div>

